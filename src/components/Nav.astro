---
const links = [
	{ href: '#about', label: 'About' },
	{ href: '#how-it-works', label: 'How It Works' },
	{ href: '#resources', label: 'Resources' },
	{ href: '#sign-in', label: 'Sign In' },
];
---

<nav
	class='bg-transparent fixed top-0 left-0 w-full z-10 h-20 flex items-center justify-between px-8'
>
	<a href='/' class='text-white text-2xl font-bold'>Vado</a>
	<div class='w-full justify-center flex pl-28'>
		<ul class='flex space-x-6'>
			{
				links.map((link) => (
					<li class='nav-item'>
						<a
							href={link.href}
							class='text-white hover:text-gray-300'>
							{link.label}
						</a>
					</li>
				))
			}
		</ul>
	</div>
	<button
		class='btn btn-outline btn-secondary text-pink-500 border-pink-500 hover:bg-pink-500 hover:text-white'
		>Download Our App</button
	>
</nav>
